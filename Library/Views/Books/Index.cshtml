@using Library.Models;

@if(Model.Count == 0)
{
    <p> please add a book</p>
}
@foreach(Book book in @Model)
{
    <p>@book.Title</p>
    <p>@book.Author.FirstName</p>
    <p>@book.Author.LastName</p>
    @Html.ActionLink("Details", "Details", "Books", new {id = @book.BookID})
    @Html.ActionLink("Add Copies", "AddCopies", "Books", new {id = @book.BookID})
}
@Html.ActionLink("Add a new book", "Create", "Books")